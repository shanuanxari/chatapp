{{>header}}
 <title>CRUD</title>
 {{>navbar}}
  <div class="mid-section container-fluid my-3">
     <h4 class="background text-center text-light p-2">Employee Records <span class="float-end">No. of Employees: {{data.length}}</span></h4>
     <div class="table-responsive">
          <table class="table table-bordered table-striped table-hover">
                  <thead>
                      <tr>
                          <th>ID</th>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Phone</th>
                          <th>Designation</th>
                          <th>Salary</th>
                          <th>City</th>
                          <th>State</th>
                          <th>Update</th>
                          <th>Delete</th>
                      </tr>
                  </thead>
                  <tbody>
                     {{#each data}}
                     <tr>
                         <td>{{_id}}</td>
                         <td>{{name}}</td>
                         <td>{{email}}</td>
                         <td>{{phone}}</td>
                         <td>{{designation}}</td>
                         <td>{{salary}}</td>
                         <td>{{city}}</td>
                         <td>{{state}}</td>
                         <td><a href="/edit/{{_id}}"><span class="material-symbols-outlined">edit</span></a></td>
                         <td><a href="/delete/{{_id}}"><span class="material-symbols-outlined text-danger">delete_forever</span></a></td>
                     </tr>
                     {{/each}}
                  </tbody>
          </table>
     </div>
  </div>

{{>footer}}